<h1>Welcome <%= current_user.name %> </h1>
<h1>this is your Index of Articles</h1>
	<%= link_to 'Main Page', root_path %>
	<%= link_to 'New Article', new_article_path, :id => "cr_art" %>
<hr>

<div class="feature">
	<div class="navbar">
		<ul>
		<% @articles.each do |article| %>
			<li><a href="/articles/<%= article.id %>"><%= article.title %></a></li>
		<% end %>	
		</ul>
	</div>

	<table>
		<tr>
			<th>Title</th>
			<th>Text</th>
			<th colspan="2"></th>
			
		</tr>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			
			<td width="10%"><%= link_to 'Edit', edit_article_path(article) %></td>
			<td width="10%"><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
		</tr>
		<% end %>
	</table>
</div>



<div class="cr_artshow"></div>